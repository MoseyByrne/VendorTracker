<div id="new">@{
  Layout = "_Layout";
}

<h1>Add a new order to @Model.Name</h1>

<form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <p><label for="orderTitle">Title</label>
  <input id="orderTitle" name="orderTitle" type="text"></p>
  <p><label for="orderDescription">Description</label>
  <input id="orderDescription" name="orderDescription" type="text"></p>
   <p><label for="orderPrice">Price</label>
  <input id="orderPrice" name="orderPrice" type="text"></p>
   <p><label for="orderDate">Date</label>
  <input id="orderDate" name="orderDate" type="text"></p>
  <p><button type='submit'>Add Order</button></p>
</form></div>